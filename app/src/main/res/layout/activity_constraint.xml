<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Constraint"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:textSize="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/Result"
         />

    <Button
        android:id="@+id/Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="135dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="C"
        android:textSize="30dp"

         />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="1"
        app:layout_constraintTop_toTopOf="@+id/Clear"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="60dp"/>


    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="4"
        app:layout_constraintTop_toTopOf="@+id/button1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="60dp"/>

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="7"
        app:layout_constraintTop_toTopOf="@+id/button4"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="60dp"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/button1"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="195dp"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="98dp"
        android:text="5"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button2"
        android:layout_marginTop="60dp"/>

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="8"
        app:layout_constraintTop_toTopOf="@+id/button5"
        app:layout_constraintLeft_toLeftOf="@+id/button1"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="60dp"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/button2"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="195dp"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="6"
        app:layout_constraintTop_toTopOf="@+id/button3"
        app:layout_constraintLeft_toLeftOf="@+id/button5"
        android:layout_marginLeft="91dp"
        android:layout_marginTop="60dp"/>

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="9"
        app:layout_constraintTop_toTopOf="@+id/button6"
        app:layout_constraintLeft_toLeftOf="@+id/button5"
        android:layout_marginLeft="91dp"
        android:layout_marginTop="60dp"/>

    <Button
        android:id="@+id/button0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="0"
        app:layout_constraintTop_toTopOf="@+id/button9"
        app:layout_constraintLeft_toLeftOf="@+id/button5"
        android:layout_marginLeft="91dp"
        android:layout_marginTop="60dp"/>

    <Button
        android:id="@+id/equals"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="="
        app:layout_constraintTop_toTopOf="@+id/button7"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="60dp"
        />

    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="135dp"
        android:layout_marginLeft="292dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="."
        android:textSize="30dp"

        />

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/button10"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="292dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="+"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/subtract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/add"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="292dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="-"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/multiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/subtract"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="292dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="x"
        android:textSize="30dp"

        />

    <Button
        android:id="@+id/divide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/multiply"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="292dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="/"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/his"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/equals"
        android:layout_marginLeft="9dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="30dp"
        android:layout_marginTop="80dp"/>






</android.support.constraint.ConstraintLayout>